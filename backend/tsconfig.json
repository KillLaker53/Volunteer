{
    "compilerOptions": {
      "lib": ["es2021"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2021",
  
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "../backend",
      "types": ["jest", "node"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
      "include": ["src/**/*", "tests/**/*"],
      "exclude": ["node_modules"]
  }