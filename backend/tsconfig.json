{
    "compilerOptions": {
      "lib": ["es2021"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2021",
  
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
      "include": ["src/**/*"],
      "exclude": ["node_modules", "**/*.spec.ts"]
  }